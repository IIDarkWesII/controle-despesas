<body>

<h2>Relógio em Tempo Real</h2>
<div id="relogio">00:00:00</div>

<h2>Adicionar Cliente</h2>
<div class="formulario">
    <input type="text" id="nomeCliente" placeholder="Nome do Cliente">
    <input type="time" id="horaAbertura">
    <input type="time" id="horaFechamento">
    <button onclick="adicionarCliente()">Adicionar Cliente</button>
</div>

<h2>Clientes</h2>
<div id="listaClientes"></div>

<script>
let clientes = [];

// Carregar clientes do LocalStorage
window.onload = function() {
    const dados = localStorage.getItem('clientes');
    if(dados) {
        clientes = JSON.parse(dados);
        renderizarClientes();
    }
};

// Atualizar relógio
function atualizarRelogio() {
    const agora = new Date();
    const h = String(agora.getHours()).padStart(2,'0');
    const m = String(agora.getMinutes()).padStart(2,'0');
    const s = String(agora.getSeconds()).padStart(2,'0');
    document.getElementById('relogio').innerText = `${h}:${m}:${s}`;
    atualizarStatusClientes();
}
setInterval(atualizarRelogio, 1000);

// Adicionar cliente
function adicionarCliente() {
    const nome = document.getElementById('nomeCliente').value.trim();
    const abertura = document.getElementById('horaAbertura').value;
    const fechamento = document.getElementById('horaFechamento').value;
    if(nome && abertura && fechamento){
        clientes.push({nome, abertura, fechamento});
        salvarClientes();
        document.getElementById('nomeCliente').value='';
        document.getElementById('horaAbertura').value='';
        document.getElementById('horaFechamento').value='';
        renderizarClientes();
    } else { alert('Preencha todos os campos!'); }
}

// Salvar clientes no LocalStorage
function salvarClientes() {
    localStorage.setItem('clientes', JSON.stringify(clientes));
}

// Atualizar status dos clientes
function atualizarStatusClientes() {
    const agora = new Date();
    const h = String(agora.getHours()).padStart(2,'0');
    const m = String(agora.getMinutes()).padStart(2,'0');
    const agoraStr = `${h}:${m}`;
    clientes.forEach((c,i)=>{
        const status = (agoraStr >= c.abertura && agoraStr <= c.fechamento) ? 'fechado' : 'aberto';
        const bolinha = document.getElementById(`status-${i}`);
        if(bolinha){ bolinha.style.backgroundColor = (status==='fechado')?'red':'green'; }
    });
}

// Renderizar clientes
function renderizarClientes() {
    const container = document.getElementById('listaClientes');
    container.innerHTML='';
    clientes.forEach((c,i)=>{
        const div = document.createElement('div');
        div.className='cliente';
        div.innerHTML=`
            <div class="cliente-info">
                <div class="status" id="status-${i}"></div>
                <div>
                    <strong>${c.nome}</strong>
                    <span>${c.abertura} - ${c.fechamento}</span>
                </div>
            </div>
            <button class="deletar" onclick="deletarCliente(${i})">Deletar</button>
        `;
        container.appendChild(div);
    });
    atualizarStatusClientes();
}

// Deletar cliente
function deletarCliente(index) {
    clientes.splice(index, 1);
    salvarClientes();
    renderizarClientes();
}
</script>

</body>
</html>
